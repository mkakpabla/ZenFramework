{% extends 'layouts/default.twig' %}
{% block content %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <h2>S'inscrire</h2>
                <form action="{{ route('register') }}" method="post">
                    <input class="form-control mb-3" type="text" name="username" placeholder="Identifient">
                    <input class="form-control mb-3" type="text" name="email" placeholder="Addresse email">
                    <input class="form-control mb-3" type="password" name="password" placeholder="Mot de passe">
                    <input class="form-control mb-3" type="password" name="password_confirm" placeholder="Re: Mot de passe">
                    <button class="btn btn-primary mt-3">S'inscrire</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}