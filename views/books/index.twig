{% extends('layouts/app.twig') %}

{% block content %}
    <div class="container mx-auto">

        <button class="modal-open bg-blue-500 hover:bg-blue-700 focus:outline-none text-white font-bold py-2 px-4 rounded my-4">Ajouter</button>
        <div class="bg-white shadow-md rounded my-6">
            <table class="text-left w-full border-collapse"> <!--Border collapse doesn't work on this site yet but it's available in newer tailwind versions -->
                <thead>
                <tr>
                    <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Titre</th>
                    <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Auteurs</th>
                    <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for book in books %}
                    <tr class="hover:bg-grey-lighter">
                        <td class="py-4 px-6 border-b border-grey-light">{{ book.title }}</td>
                        <td class="py-4 px-6 border-b border-grey-light">{{ book.author }}</td>
                        <td class="py-4 px-6 border-b border-grey-light">
                            <a href="#" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Voir</a>
                            <a href="#" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% include('books/create.twig') %}

{% endblock %}

