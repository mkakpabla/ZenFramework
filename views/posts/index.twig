{% extends 'layouts/app.twig' %}

{% block content %}

    <div class="container">
        {% for post in posts %}
            <div class="row">
                <h2>
                    <a href="{{ route('post.show', {slug: post.slug}) }}">{{ post.title }}</a>
                </h2>
                <p>{{ post.content }}</p>
            </div>
        {% endfor %}
    </div>

{% endblock %}